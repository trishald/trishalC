#include<stdio.h>
void input(int a[],int *n)
{
	printf("Enter the size of the array \n");
	scanf("%d",n);
	printf("Enter the array elements\n");
	for(int i=0;i<*n;i++)
	{
		scanf("%d",&a[i]);
	}
}
void compute(int a[],int n)
{
	int i,j,temp=0;
	for(i=0;i<n;i++)
	{

		for(j=0;j<n-1-i;j++)
		{
			if(a[j+1]<a[j])
			{
				temp=a[j];
				a[j]=a[j+1];
				a[j+1]=temp;
			}
		}
	}
}
void output(int a[],int n)
{
	printf("The sorted array is \n");
	for(int i=0;i<n;i++)
	{
		printf("%d",a[i]);
	}
}
void main()
{
	int a[10],n;
	input(a,&n);
	compute(a,n);
	output(a,n);
}
