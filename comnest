
#include<stdio.h>
int input(int *a,int *b,int *c)
{
        printf("Enter a\n");
        scanf("%d",a);
        printf("Enter b\n");
        scanf("%d",b);
        printf("Enter c\n");
        scanf("%d",c);
}
int compute(int a,int b,int c)
{
        if((a<b)&(a<c))
                return a;
        else if((b<a)&&(b<c))
                return b;
        else if((c<a)&&(c<b))
                return c;
}
int output(int a,int b,int c,int min)
{
        printf("The min of %d,%d and %d is %d",a,b,c,min);

        return 0;
}
void main()
{
        int a,b,c,min;
        input(&a,&b,&c);
        min=compute(a,b,c);
        output(a,b,c,min);

}

